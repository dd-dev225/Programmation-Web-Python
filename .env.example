# Fichier d'environnement - À copier vers .env et compléter avec vos valeurs

# Clé secrète Django - Générer une nouvelle avec: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=votre-cle-secrete-ici

# Mode debug (True pour développement, False pour production)
DEBUG=True

# Hosts autorisés (séparés par virgules)
ALLOWED_HOSTS=localhost,127.0.0.1

# Configuration Base de Données
# ENGINE: mysql ou postgresql
DB_ENGINE=mysql
DB_NAME=data_pwp
DB_USER=root
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=3306
